<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_6">

    <TextView
        android:id="@+id/txtUsernameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtInfo" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtUsername" />

    <TextView
        android:id="@+id/txtProfileDsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtProfileDsc" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtMspDsc"
        android:layout_width="189dp"
        android:layout_height="26dp"
        android:text="@string/findProfileDsc" />

    <EditText
        android:id="@+id/etMSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnFindProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btnFindProfile" />
</LinearLayout>